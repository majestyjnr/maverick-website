<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Maverick Edifice - Manage Blog</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="../../img/favi.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../../assets/css/bootstrap.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="../../assets/css/font-awesome.min.css">

    <!-- Feathericon CSS -->
    <link rel="stylesheet" href="../../assets/css/feathericon.min.css">

    <link rel="stylesheet" href="../../assets/plugins/morris/morris.css">

    <link rel="stylesheet" href="../../assets/plugins/summernote/summernote-bs4.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="../../assets/css/style.css">
    <!-- IZITOAST Libraries -->
    <link rel="stylesheet" href="../../css/izitoast/css/iziToast.min.css">
</head>

<body>

    <!-- Main Wrapper -->
    <div class="main-wrapper">

        <!-- Header -->
        <div class="header">

            <!-- Logo -->
            <div class="header-left">
                <a href="/maverick-admin/dashboard" class="logo">
                    <img src="../../assets/img/logo.png" alt="Logo">
                </a>
                <a href="/maverick-admin/dashboard" class="logo logo-small">
                    <img src="../../assets/img/logo-small.png" alt="Logo" width="30" height="30">
                </a>
            </div>
            <!-- /Logo -->

            <a href="javascript:void(0);" id="toggle_btn">
                <i class="fe fe-text-align-left"></i>
            </a>

            <div class="top-nav-search">
                <form>
                    <input type="text" class="form-control" placeholder="Search Blog">
                    <button class="btn" type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>

            <!-- Mobile Menu Toggle -->
            <a class="mobile_btn" id="mobile_btn">
                <i class="fa fa-bars"></i>
            </a>
            <!-- /Mobile Menu Toggle -->

            <!-- Header Right Menu -->
            <ul class="nav user-menu">

                <!-- User Menu -->
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                        <span class="user-img">
                            <% if(admin_image != ''){ %>
                            <img class="rounded-circle" src="../../assets/team/admin/<%= admin_image %>" width="31"
                                alt="Username">
                            <% } %>
                        </span>
                    </a>
                    <div class="dropdown-menu">
                        <div class="user-header">
                            <div class="avatar avatar-sm">
                                <% if(admin_image != ''){ %>
                                <img src="../../assets/team/admin/<%= admin_image %>" alt="User Image"
                                    class="avatar-img rounded-circle">
                                <% } %>
                            </div>
                            <div class="user-text">
                                <h6><%= admin_name %></h6>
                                <p class="text-muted mb-0">Administrator</p>
                            </div>
                        </div>
                        <a class="dropdown-item" href="/maverick-admin/profile">My Profile</a>
                        <a class="dropdown-item" href="/maverick-admin/logout">Logout</a>
                    </div>
                </li>
                <!-- /User Menu -->

            </ul>
            <!-- /Header Right Menu -->

        </div>
        <!-- /Header -->

        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">
                            <span>Main</span>
                        </li>
                        <li>
                            <a href="/maverick-admin/dashboard"><i class="fe fe-home"></i> <span>Dashboard</span></a>
                        </li>
                        <li>
                            <a href="/maverick-admin/add-new/admin"><i class="fe fe-user-plus"></i> <span>Add New
                                    Admin</span></a>
                        </li>
                        <li>
                            <a href="/maverick-admin/add-new/team-member"><i class="fe fe-user-plus"></i> <span>Add Team
                                    Member</span></a>
                        </li>
                        <li class="submenu">
                            <a href="#"><i class="fe fe-upload"></i> <span> Uploads</span> <span
                                    class="menu-arrow"></span></a>
                            <ul style="display: none;">
                                <li><a href="/maverick-admin/add-new/post"><i class="fe fe-layout"></i>
                                        Add New Post</a></li>
                                <li><a href="/maverick-admin/add-new/podcast"><i class="fe fe-file-audio"></i> Add New
                                        Podcast</a>
                                </li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="#"><i class="fe fe-document"></i> <span> Management</span> <span
                                    class="menu-arrow"></span></a>
                            <ul style="display: none;">
                                <li><a href="/maverick-admin/management/admins"><i class="fe fe-users"></i> Manage
                                        Admins</a></li>
                                <li><a href="/maverick-admin/management/team"><i class="fe fe-users"></i> Manage
                                        Team</a></li>
                                <li><a href="/maverick-admin/management/blog" class="active"><i
                                            class="fe fe-layout"></i> Manage
                                        Blog</a></li>
                                <li><a href="/maverick-admin/management/podcasts"><i class="fe fe-file-audio"></i>
                                        Manage Podcast</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="/maverick-admin/messages"><i class="fe fe-messanger"></i> <span>
                                    Messages</span></a>
                        </li>
                        <li class="submenu">
                            <a href="#"><i class="fe fe-document"></i> <span>Subscriptions</span> <span
                                    class="menu-arrow"></span></a>
                            <ul style="display: none;">
                                <li><a href="/maverick-admin/broadcast-newsletters"><i class="fe fe-users"></i> Send Newsletters</a></li>
                                <li><a href="/maverick-admin/subscribers"><i class="fe fe-users"></i> Subscribers</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Sidebar -->

        <!-- Page Wrapper -->
        <div class="page-wrapper">

            <div class="content container-fluid">

                <!-- Page Header -->
                <div class="page-header">
                    <div class="row">
                        <div class="col-sm-12">
                            <h3 class="page-title">Manage Blog</h3>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/maverick-admin/dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item active">Management</li>
                                <li class="breadcrumb-item active">Manage Blog</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /Page Header -->

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="datatable table table-hover table-center mb-0">
                                        <h2 class="text-center"><%= blog.length %> Posts</h2>
                                        <thead>
                                            <tr>
                                                <th>Specialities</th>
                                                <th>Posted On</th>
                                                <th>Post Status</th>
                                                <th class="text-right">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% blog.forEach(function(post){ %>
                                            <tr>
                                                <td>
                                                    <h2 class="table-avatar">
                                                        <a href="" class="avatar avatar-sm mr-2">
                                                            <img class="avatar-img"
                                                                src="../../assets/blog/<%= post.blogImage %>"
                                                                alt="Speciality">
                                                        </a>
                                                        <a href=""><%= post.blogTitle.substring(0, 40) + "..." %></a>
                                                    </h2>
                                                </td>
                                                <td>
                                                    <div><%= post.timePosted %></div>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge badge-pill bg-success inv-badge">Posted</span>
                                                </td>
                                                <td class="text-right">
                                                    <div class="actions">
                                                        <a class="btn btn-sm bg-success-light"
                                                            href="/maverick-admin/management/edit-blog?id=<%= post._id %>">
                                                            <i class="fe fe-pencil"></i> Edit
                                                        </a>
                                                        <a href="/maverick-admin/management/delete-blog?id=<%= post._id %>"
                                                            class="btn btn-sm bg-danger-light">
                                                            <i class="fe fe-trash"></i> Delete
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                    <!-- <script>
                                        function deletePost(postId) {
                                            $.ajax({
                                                url: '/delete-blog',
                                                method: 'POST',
                                                data: {
                                                    'postId': postId
                                                },
                                                success: function (response) {

                                                    var notify = new Audio('../../sounds/notify.mp3');
                                                    notify.play();
                                                    iziToast.success({ title: 'Success!', message: 'Post deleted successfully', position: 'topRight' })
                                                }
                                            })
                                        }
                                    </script> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Page Wrapper -->


    </div>
    <!-- /Main Wrapper -->

    <!-- jQuery -->
    <script src="../../assets/js/jquery-3.2.1.min.js"></script>


    <!-- <script>
        var notify = new Audio("../../sounds/notify.mp3");
        notify.play();
        iziToast.success({ title: 'Success!', message: , position: 'topRight' })
    </script> -->


    <!-- Bootstrap Core JS -->
    <script src="../../assets/js/popper.min.js"></script>
    <script src="../../assets/js/bootstrap.min.js"></script>

    <!-- Slimscroll JS -->
    <script src="../../assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <script src="../../assets/plugins/raphael/raphael.min.js"></script>
    <script src="../../assets/plugins/morris/morris.min.js"></script>
    <script src="../../assets/js/chart.morris.js"></script>

    <!-- Custom JS -->
    <script src="../../assets/js/script.js"></script>
    
    <!-- IZITOAST -->
    <script src="../../css/izitoast/js/iziToast.min.js"></script>

    <% if( error != '') { %>
    <script>
        var notify = new Audio("../../sounds/notify.mp3");
        notify.play();
        iziToast.error({ title: 'Error!', message: `<%= error %>`, position: 'topRight' })
    </script>
    <% } %>
    <% if(error_msg != '') { %>
    <script>
        var notify = new Audio("../../sounds/notify.mp3");
        notify.play();
        iziToast.error({ title: 'Info!', message: `<%= error_msg %>`, position: 'topRight' })
    </script>
    <% } %>
    <% if(typeof errors != 'undefined') { %>
    <%  errors.forEach(function(error) { %>
    <script>
        var notify = new Audio("../../sounds/notify.mp3");
        notify.play();
        iziToast.error({ title: 'Error Encountered!', message: `<%= error.msg %>`, position: 'topRight' })
    </script>
    <%     }); %>
    <% } %>

    <% if(success_msg != '') { %>
    <script>
        var notify = new Audio("../../sounds/notify.mp3");
        notify.play();
        iziToast.success({ title: 'Success!', message: `<%= success_msg %>`, position: 'topRight' })
    </script>
    <% } %>

</body>

</html>